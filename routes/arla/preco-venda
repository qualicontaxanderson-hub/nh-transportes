@bp.route('/preco-venda', methods=['GET', 'POST'])
@login_required
def preco_venda():
    if request.method == 'POST':
        data_inicio = request.form['data_inicio']
        preco_venda = request.form['preco_venda']

        conn = get_db()
        cursor = conn.cursor()
        cursor.execute("""
            INSERT INTO arla_precos_venda (data_inicio, preco_venda)
            VALUES (%s, %s)
        """, (data_inicio, preco_venda))
        conn.commit()
        cursor.close()
        conn.close()

        flash('Pre√ßo de venda alterado com sucesso!', 'success')
        return redirect(url_for('arla.preco_venda'))

    return render_template('arla/preco_venda.html')
